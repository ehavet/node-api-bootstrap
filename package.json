{
  "name": "node-api-bootstrap",
  "version": "0.0.0",
  "description": "api bootstrap with node js",
  "license": "UNLICENSED",
  "author": "octo",
  "repository": "/node-api-bootstrap",
  "engines": {
    "node": "^14.4.0",
    "npm": "^6.14.5"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc && copyfiles -u 1 ./src/app/**/*.pdf ./dist/",
    "build:dev": "tsc --sourceMap && copyfiles -u 1 ./src/app/**/*.pdf ./dist/",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "containers:api:start": "docker-compose up -d api",
    "start": "node ./dist/start-server.js",
    "dev": "nodemon --watch src -e ts --exec yarn dev:start",
    "dev:start": "yarn build:dev && yarn start",
    "test": "NODE_ENV=test nyc mocha 'test/**/*.{js,ts}' --require ts-node/register",
    "test:ci": "NODE_ENV=test nyc --reporter text --reporter html mocha 'test/**/*.{js,ts}' --require ts-node/register"
  },
  "main": "server.js",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@salesforce/ts-sinon": "^1.1.1",
    "@types/chai": "^4.2.8",
    "@types/chai-as-promised": "^7.1.2",
    "@types/debug": "^4.1.5",
    "@types/hapi__hapi": "^20.0.2",
    "@types/hapi__inert": "^5.2.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.12.44",
    "@types/pino": "^6.0.1",
    "@types/sinon": "^9.0.4",
    "@types/sinon-chai": "^3.2.4",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.3.0",
    "debug": "^4.1.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "mocha": "^7.2.0",
    "nock": "^13.0.4",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.4.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^20.0.2",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "envie": "^3.0.2",
    "hapi-swagger": "^14.0.0",
    "joi": "^17.3.0",
    "json": "^9.0.6",
    "pino": "^6.3.2",
    "pino-multi-stream": "^5.0.0",
    "prom-client": "^13.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ./scripts/vault-pre-commit-hooks.sh"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ],
    "*.js": [
      "eslint"
    ]
  }
}
